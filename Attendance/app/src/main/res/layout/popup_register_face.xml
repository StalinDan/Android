<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="420dp"
    android:padding="20dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:text="姓名："/>

            <EditText
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/titleColor_333"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/retireSpace"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:text="工号："/>

            <EditText
                android:id="@+id/workNo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:singleLine="true"
                android:maxLines="1"
                android:enabled="false"
                android:textColor="@color/titleColor_333"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/retireSpace">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:text="车牌："/>

            <EditText
                android:id="@+id/trainNo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:singleLine="true"
                android:maxLines="1"
                android:enabled="false"
                android:textColor="@color/titleColor_333"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/headerImg"
        android:layout_width="@dimen/headerImgSize"
        android:layout_height="@dimen/headerImgSize"
        android:src="@mipmap/header_img"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/photoBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/btn_corner_blue"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/headerImg"
        android:layout_marginRight="70dp"
        android:text="拍摄"
        android:textColor="#fff"
        android:textSize="@dimen/buttonWhiteFontSize"
        />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/btn_corner_blue"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="关闭"
        android:textColor="#fff"
        android:textSize="@dimen/buttonWhiteFontSize"
        />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/btn_corner_blue"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/closeBtn"
        android:layout_marginLeft="30dp"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="@dimen/buttonWhiteFontSize"
        />

</RelativeLayout>