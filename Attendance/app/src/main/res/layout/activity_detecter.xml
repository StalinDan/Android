<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deayea.driverlogin.activity.DetecterActivity">

    <TextView
        android:id="@+id/recognizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/btn_corner_blue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/buttonLeftSpace"
        android:text="退出"
        android:textColor="#fff"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/photoBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/btn_corner_blue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="重新拍摄"
        android:textColor="#fff"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:background="@drawable/btn_corner_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/buttonLeftSpace"
        android:textColor="#fff"
        android:text="确认"
        android:textSize="20sp"
        android:enabled="false"
        />

</RelativeLayout>
