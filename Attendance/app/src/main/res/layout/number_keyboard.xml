<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_corner_topleft"
            android:text="1"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="2"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_corner_topright"
            android:text="3"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="4"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"
            />

        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="5"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="6"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="7"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="8"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="9"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_corner_bottomleft"
            android:text="确认"
            android:textColor="@color/title_blue"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_rect_bg"
            android:text="0"
            android:textColor="@color/titleColor_333"
            android:textSize="@dimen/keyboardFontSize"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_corner_bottomright"
            android:text="删除"
            android:textColor="@color/title_red"
            android:textSize="@dimen/keyboardFontSize"/>

    </LinearLayout>

</LinearLayout>