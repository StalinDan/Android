<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danish.iromantest.HomeActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trainNo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D3228"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/trainDate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trainNo_text"
            android:layout_marginTop="5dp"
            android:text="2017-08-04"
            android:textColor="@color/color_999"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/startStatio_text"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="上海虹桥"
            android:textColor="@color/color_333"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/startTime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/startStatio_text"
            android:layout_marginTop="5dp"
            android:text="13：20"
            android:textColor="@color/color_999"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/endStation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="合肥南"
            android:textColor="@color/color_333"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/pointline"
            android:layout_toLeftOf="@+id/endStation_text"
            android:layout_toRightOf="@+id/startStatio_text"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/endTime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/endStation_text"
            android:text="16：10"
            android:textColor="@color/color_999"
            android:textSize="17dp" />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="状态均值"
        android:textSize="12dp"
        android:textColor="@color/color_999"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/avg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78"
                android:textColor="@color/boder_blueColor"
                android:textSize="34sp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/max_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:textColor="@color/boder_blueColor"
                android:layout_toRightOf="@+id/avg_text"
                android:layout_centerVertical="true"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textColor="@color/boder_blueColor"
                android:textSize="17sp"
                android:layout_toLeftOf="@+id/avg_text"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佩戴时长"
                    android:textColor="@color/color_999"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="65分钟"
                    android:textColor="#89d043"
                    android:textSize="15sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心率"
                    android:textColor="@color/color_999"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="72~88"
                    android:textColor="#f05e4b"
                    android:textSize="15sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佩戴时长"
                    android:textColor="@color/color_999"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="65分钟"
                    android:textColor="#89d043"
                    android:textSize="15sp"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
