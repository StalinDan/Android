<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danish.iromantest.MyActivity"
    android:orientation="vertical"
    android:background="#f5f5f5">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@mipmap/myheaderbg">
        
        <ImageView
            android:id="@+id/headerImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/header"/>


        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/headerImg"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="王火车"
            android:layout_alignTop="@+id/headerImg"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            />

        <LinearLayout
            android:layout_below="@+id/nameText"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/jobImg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignLeft="@+id/nameText"
                android:layout_below="@+id/nameText"
                android:src="@mipmap/jobnum"
                />

            <TextView
                android:id="@+id/workNo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textColor="#fff"
                android:textSize="11sp"
                android:layout_toRightOf="@+id/jobImg"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/jobImg"/>

            <ImageView
                android:id="@+id/trainLine_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toRightOf="@+id/workNo_text"
                android:layout_alignTop="@+id/jobImg"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/trainline"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客车机务段"
                android:textColor="#fff"
                android:textSize="11sp"
                android:layout_toRightOf="@+id/trainLine_img"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/jobImg"/>



        </LinearLayout>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:src="@mipmap/rightarrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/sign"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textColor="@color/color_666"
                    android:layout_marginTop="6dp"
                    />

            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="1.5dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="#f5f5f5"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/sign"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textColor="@color/color_666"
                    android:layout_marginTop="6dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="#f5f5f5"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/sign"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textColor="@color/color_666"
                    android:layout_marginTop="6dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <include android:id="@+id/gift" layout="@layout/myrow_item"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="15dp"/>

        <include android:id="@+id/address" layout="@layout/myrow_item"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="15dp"/>

        <include android:id="@+id/feedBack" layout="@layout/myrow_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include android:id="@+id/about" layout="@layout/myrow_item"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>
