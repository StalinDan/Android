        android:text="开始扫描"
        />

    <Button
        android:id="@+id/stopScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="停止扫描"
        />

