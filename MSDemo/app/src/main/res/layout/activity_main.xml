        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="获取距离"
        />

    <Button
        android:id="@+id/blood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="启动测量血压"
        />

    <Button
        android:id="@+id/closBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="关闭测量血压"
