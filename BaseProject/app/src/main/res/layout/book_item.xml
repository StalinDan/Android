<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_oval_corner">

    <View
        android:id="@+id/book_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>
    
    <ImageView
        android:id="@+id/bookImg"
        android:layout_marginLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/bookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bookImg"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/bookImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="黑客与画家"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookName"
        android:layout_below="@+id/bookName"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="作者"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/bookSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookName"
        android:layout_below="@+id/bookAuthor"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="副标题"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/bookVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookSubTitle"
        android:layout_below="@+id/bookSubTitle"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="出版日期"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/bookPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookSubTitle"
        android:layout_below="@+id/bookVersion"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="页数"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/bookPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bookSubTitle"
        android:layout_below="@+id/bookPage"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="定价"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

</RelativeLayout>